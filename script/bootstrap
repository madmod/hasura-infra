#!/bin/bash

set -euo pipefail

DIR="$( cd "$( dirname "${BASH_SOURCE[0]}" )" >/dev/null 2>&1 && pwd )"
ROOT="$DIR/.."

pulumi up -y || true
sleep 3

pulumi refresh -y && pulumi up -y

. $ROOT/script/env.sh

$ROOT/script/update-config
npx sequelize db:migrate

## Make sure we end up updating these variables in the parent shell
exec $ROOT/script/env.sh